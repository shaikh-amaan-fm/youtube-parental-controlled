<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-notification" version="1.3.7"
    xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Cordova Local Notification</name>
    <keywords>cordova,webview,cache,clear,android,ios</keywords>
    <description>Cordova Local Notification Plugin</description>

    <repo>https://github.com/anrip/cordova-plugin-notification.git</repo>
    <issue>https://github.com/anrip/cordova-plugin-notification/issues</issue>
    <author email="mail@anrip.com" href="http://www.anrip.com">Anrip Wong</author>

    <license>MIT</license>

    <engines>
        <engine name="cordova" version=">=6.1.1" />
    </engines>

    <platform name="android">
        <js-module src="www/Notify.js" name="notify">
            <clobbers target="Notify" />
        </js-module>
    </platform>

    <platform name="ios">
        <js-module src="www/Notify.js" name="notify">
            <clobbers target="Notify" />
        </js-module>
    </platform>

    <dependency id="cordova-plugin-app-event" />
    <dependency id="cordova-plugin-badge" version="0.7.4" />
    <dependency id="de.appplant.cordova.plugin.local-notification" version="0.8.5" />

</plugin>